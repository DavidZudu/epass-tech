<flynt-component name="LayoutBasicHeader" class="componentSpacing {{largeHeader ? 'lg'}}">
    <div class="container">
        <div class="content">
            <h1 class="">{{ pageTitle ?? post.title ?? fn('get_the_archive_title') }}</h1>
        </div>
    </div>
</flynt-component>
{% if not function('is_front_page') %}
    <nav class="breadcrumbs">
        <div class="container">
            {% if function('bcn_display') %}
                {{ function('bcn_display') }}
            {% endif %}
        </div>
    </nav>
{% endif %}
