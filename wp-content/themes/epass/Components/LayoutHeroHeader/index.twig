<flynt-component name="LayoutHeroHeader" class="componentSpacing {{largeHeader ? 'lg'}} {{image ? 'has-media'}}">
    <img class="gradient-disc" src="{{theme.link}}/assets/images/purple-radial.svg" alt="">
    <img class="gradient-disc" src="{{theme.link}}/assets/images/green-radial.svg" alt="">
    <div class="container">
        <div class="content">
            <h1 class="h0">{{ pageTitle ?? post.title ?? fn('get_the_archive_title') }}</h1>
            <p class="pre-title mb8">{{preTitle}}</p>
            <div class="">
                {{content}}
            </div>
            {% if ctaLinks %}
                <div class="ctas">
                    {% for btn in ctaLinks %}
                        <a href="{{btn.cta.url}}" target="{{btn.cta.target}}" rel="noopener noreferrer" class="button {{btn.style}}">{{btn.cta.title}}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}

        </div>

    </div>
</flynt-component>

<div class="hero-header-media">
    <div class="container">
        <div class="wrap {{video ? 'add-shadow'}}">
        {% if video %}
            <video aria-label="ePass promotional video" class="hero-video" autoplay muted loop>>
                <source
                src="{{video.src}}" type="video/mp4">
                {# <track src="subtitles.vtt" kind="subtitles" srclang="en" label="English"> #}
                Your browser does not support the video tag.
            </video>
            <button class="video-play-button">
                <img src="{{theme.link}}/assets/images/play-btn.svg" alt="Play icon">

                <span class="visually-hidden">Play video</span>
            </button>
            {% elseif image %}
                                                    <img loading="lazy" class="" src="{{ image.src }}" sizes="100vw" srcset="{{ image.srcset }}" alt="{{ image.alt }}"/>
                                                {% endif %}
        </div>

        <aside class="logos">
            {% if logoLabel %}
                <span class="logo-label">{{logoLabel}}</span>
            {% endif %}
            <div class="logo-wrap">
                {% for logo in logos %}
                    <img loading="lazy" class="" src="{{ logo.src }}" sizes="100vw" srcset="{{ logo.srcset }}" alt="{{ logo.alt }}"/>
                {% endfor %}
            </div>
        </aside>
    </div>
</div>
