<flynt-component name="LayoutHeroHeader" class="componentSpacing {{largeHeader ? 'lg'}}">
<img class="gradient-disc" src="{{theme.link}}/assets/images/purple-radial.svg" alt="">
<img class="gradient-disc" src="{{theme.link}}/assets/images/green-radial.svg" alt="">
    <div class="container">
        <div class="content">
            <h1 class="h0 mb0">{{ pageTitle ?? post.title ?? fn('get_the_archive_title') }}</h1>
            <div class="content">
                {{content}}
            </div>
            {% if ctaLinks %}
                <div class="ctas">
                    {% for btn in ctaLinks %}
                        <a href="{{btn.cta.url}}" target="{{btn.cta.target}}" rel="noopener noreferrer" class="button {{btn.style}}">{{btn.cta.title}}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</flynt-component>
{% if not function('is_front_page') %}
    <nav class="breadcrumbs">
        <div class="container">
            {% if function('bcn_display') %}
                {{ function('bcn_display') }}
            {% endif %}
        </div>
    </nav>
{% endif %}
